@page "/{lang}/RecruitmentInfo/{link}"
@inject IRecruitmentService _service
@inject ISetupKeyValueService _keyValueservice
 
<div class="col-lg-12">
    <div class="card mb-3 p-3">
        <div class="row g-0">
            <div class="col-md-3 text-center ">
                <img src="/Logo.webp" class="img-fluid rounded-start m-auto" />
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h6 class="card-title text-info fs-4 fw-bold"><span style="display: inline-flex">@Localizer.GetUi("PositionName"): </span><span class=" text-dark">@Recruitment.PositionName</span> </h6>
                    <h5 class="card-title text-info fs-6 fw-bold">
                        <span style="display: inline-flex">@Localizer.GetUi("OrganizationName"): </span>
                        <span class=" text-dark">@Recruitment.OrganizationName</span>
                    </h5>
                    @if (Recruitment != null)
                    {
                        @if (Recruitment.LinkExpiryDate > DateTime.Now)
                        {
                            <div class=" ">
                                <button class="btn btn-success btn-md" @onclick="NavigateToRecruitmentForm">@Localizer.GetUi("Apply")</button>
                            </div>

                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row m-0 p-0">
    <div class="col-md-8 ">
        <div class="card mb-3 p-3">
            <div class="col">
                <h3 class="card-title text-primary fw-bold m-0 mb-2 fs-5">@Localizer.GetUi("PositionSummary")</h3>
                @if (!string.IsNullOrEmpty(Recruitment.PositionSummary))
                {

                    <p>@Recruitment.PositionSummary.Replace(Environment.NewLine, "<br>")</p>
                }
            </div>
        </div>

        <div class="card mb-3 p-3">


            <div class="col">
                <h3 class="card-title text-primary fw-bold m-0 mb-2 fs-5">@Localizer.GetUi("PositionDetails")</h3>
                @if (!string.IsNullOrEmpty(Recruitment.PositionDetails))
                {

                    <p>@Recruitment.PositionDetails.Replace(Environment.NewLine, "<br>")</p>
                }
            </div>
        </div>

        <div class="card mb-3 p-3">


            <div class="col">
                <h3 class="card-title text-primary fw-bold m-0 mb-2 fs-5">@Localizer.GetUi("PositionRequirements")</h3>
                @if (!string.IsNullOrEmpty(Recruitment.PositionRequirements))
                {

                    <p>@Recruitment.PositionRequirements.Replace(Environment.NewLine, "<br>")</p>
                }
            </div>
        </div>
        @if (Recruitment.LinkExpiryDate > DateTime.Now)
        {
            <div class="mb-5 ">
                <button class="btn btn-success btn-md" @onclick="NavigateToRecruitmentForm">@Localizer.GetUi("Apply")</button>
            </div>

        }
    </div>

    <div class="col-md-4 ">
        <div class="card mb-3  pt-0">
            <div class="card-header mt-0" style="background-color: #f2f2f2;">
                <h6 class="text-dark  m-0">@Localizer.GetUi("OrganizationVision")</h6>
            </div>
            <div class="" style="height: 160px; overflow-y:auto; padding:5px 10px;">
                @if (!string.IsNullOrEmpty(Recruitment.OrganizationVision))
                {

                    <p>@Recruitment.OrganizationVision.Replace(Environment.NewLine, "<br>")</p>
                }
            </div>
        </div>
        <div class="card mb-3  pt-0">
            <div class="card-header mt-0" style="background-color: #f2f2f2;">
                <h6 class="text-dark  m-0">@Localizer.GetUi("OrganizationMission")</h6>

            </div>

            <div class="" style="height: 160px; overflow-y:auto; padding:5px 10px;">
                @if (!string.IsNullOrEmpty(Recruitment.OrganizationMission))
                {

                    <p>@Recruitment.OrganizationMission.Replace(Environment.NewLine, "<br>")</p>
                }
            </div>
        </div>

    </div>

</div>



@code {
    public Models.Recruitment? Recruitment { get; set; } = new();
    [Parameter]
    public string link { get; set; }
    [Parameter]
    public string lang { get; set; }
    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrWhiteSpace(link))
        {
            // var x= await _keyValueservice.GetKeyValueList<Gender>();
            Recruitment = await _service.GetRecruitmentFromLinkAsync(link);
        }
        await base.OnParametersSetAsync();
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private void NavigateToRecruitmentForm()
    {
        NavigationManager.NavigateTo($"/{lang}/Recruitment/{Uri.EscapeDataString(link)}");
    }
}
